{
    "name": "astrogoat/promobar",
    "description": "A Promobar app for Strata",
    "keywords": [
        "astrogoat",
        "laravel",
        "promobar"
    ],
    "homepage": "https://github.com/astrogoat/promobar",
    "license": "MIT",
    "authors": [
        {
            "name": "Kristoffer Tonning",
            "email": "tonning@gmail.com",
            "role": "Developer"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.hlx.dev"
        }
    ],
    "require": {
        "php": "^8.0",
        "astrogoat/strata": "^0.6.0",
        "spatie/laravel-package-tools": "^1.4.3",
        "illuminate/support": "^8.37 || ^9.0 || ^10.0"
    },
    "require-dev": {
        "nunomaduro/collision": "^5.3|^7.0",
        "orchestra/testbench": "^6.15|^8.5",
        "pestphp/pest": "^1.18|^2.16",
        "pestphp/pest-plugin-laravel": "^1.1|^2.2",
        "spatie/laravel-ray": "^1.23",
        "vimeo/psalm": "^4.8|^5.15"
    },
    "autoload": {
        "psr-4": {
            "Astrogoat\\Promobar\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Astrogoat\\Promobar\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "./vendor/bin/pest --no-coverage",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Astrogoat\\Promobar\\PromobarServiceProvider"
            ],
            "aliases": {
                "Promobar": "Astrogoat\\Promobar\\PromobarFacade"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
